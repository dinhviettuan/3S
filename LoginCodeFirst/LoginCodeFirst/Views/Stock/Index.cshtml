@model List<LoginCodeFirst.ViewModels.Stock.StockViewModel>
@{
    ViewBag.Title = StockLocalizer.GetLocalizedHtmlString("lbl_ListStock");
}


<div class="container-fluid">
    <div class="block-header">
    </div>
    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2> 
                        <a type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-contact" 

                           asp-controller="Stock" asp-action="Add")>@CommonLocalizer.GetLocalizedHtmlString("btn_Add")</a>
                    </h2>  
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                            <tr>
                                <th>
                                    @StockLocalizer.GetLocalizedHtmlString("lbl_NumbericalOrder")
                                </th>
                                <th>
                                    @StockLocalizer.GetLocalizedHtmlString("lbl_StoreId")
                                </th>
                                <th>
                                    @StockLocalizer.GetLocalizedHtmlString("lbl_ProductId")
                                </th>
                                <th>
                                    @StockLocalizer.GetLocalizedHtmlString("lbl_Quantity")
                                </th>
                                <th>
                                    @StockLocalizer.GetLocalizedHtmlString("lbl_Actions")
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @{ var stt = 0;}
                            @foreach (var item in Model)
                            {
                                stt += 1;
                                <tr>
                                    <td>@stt</td>
                                    <td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StoreId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>

                                        <a asp-controller="Stock" asp-action="Edit" 
                                           asp-route-storeId="@item.StoreId" 
                                           asp-route-productId="@item.ProductId">@CommonLocalizer.GetLocalizedHtmlString("btn_Edit")</a>
                                        <a asp-controller="Stock" asp-action="Delete"
                                           onclick=" return confirm('@CommonLocalizer.GetLocalizedHtmlString("btn_YouDelete")')" 
                                           asp-route-storeId="@item.StoreId"
                                           asp-route-productId="@item.ProductId">@CommonLocalizer.GetLocalizedHtmlString("btn_Delete")</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>