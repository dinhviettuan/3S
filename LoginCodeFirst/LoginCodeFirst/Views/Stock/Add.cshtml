@model LoginCodeFirst.ViewModels.Stock.StockViewModel
@{
    ViewBag.Title = StockLocalizer.GetLocalizedHtmlString("lbl_AddStock");
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="block-header">
    </div>
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title"></h2>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <form asp-controller="Stock" asp-action="Add" method="post">
                                <div class="form-group">
                                    <label class="form-label" asp-for="StoreId">@StockLocalizer.GetLocalizedHtmlString("lbl_StoreId")</label>
                                    <select asp-for="StoreId" class="form-control" asp-items="@ViewBag.StoreId"></select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ProductId">@StockLocalizer.GetLocalizedHtmlString("lbl_ProductId")</label>
                                    <select asp-for="ProductId" class="form-control" asp-items="@ViewBag.ProductId"></select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="Quantity">@StockLocalizer.GetLocalizedHtmlString("lbl_Quantity")</label>
                                    <input type="text" asp-for="Quantity" placeholder="Quantity" class="form-control">
                                    <span class="text-danger" asp-validation-for="Quantity"></span>
                                </div>

                                <button class="btn btn-primary waves-effect" type="submit">@CommonLocalizer.GetLocalizedHtmlString("btn_Submit")</button>
                            </form>
                        </div>
                        <a asp-area="" asp-controller="Stock" asp-action="Index">

                            <i class="material-icons">reply</i>@CommonLocalizer.GetLocalizedHtmlString("btn_ComBack")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
</div>