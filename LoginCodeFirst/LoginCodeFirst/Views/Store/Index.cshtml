@using LoginCodeFirst.Resources
@model List<LoginCodeFirst.ViewModels.Store.StoreViewModel>
@inject ResourcesServices Localizer
@{
    ViewBag.Title = Localizer.GetLocalizedHtmlString("lbl_ListStore");
}

<div class="container-fluid">
    <div class="block-header">
    </div>
    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2> 
                        <a type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-contact" 
                           asp-controller="Store" asp-action="Add")>@Localizer.GetLocalizedHtmlString("btn_Add")</a>
                    </h2>  
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_StoreId")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_StoreName")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_Phone")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_Email")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_Street")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_City")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_State")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_ZipCode")
                                    </th>   
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("lbl_Actions")
                                    </th>                                
                                </tr>
                            </thead>
                            <tbody>
                            @{ var stt = 0;}
                            @foreach (var item in Model)
                            {
                                stt += 1;
                                <tr>
                                    <td>@stt</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StoreId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StoreName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Street)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ZipCode)
                                    </td>

                                    <td>
                                        <a asp-controller="Store" asp-action="Edit" 
                                           asp-route-id="@item.StoreId">@Localizer.GetLocalizedHtmlString("a_Edit")</a> |
                                        <a asp-controller="Store" asp-action="Delete" 
                                           onclick=" return confirm('You really want to delete?')"
                                           asp-route-id="@item.StoreId">@Localizer.GetLocalizedHtmlString("btn_Delete")</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>