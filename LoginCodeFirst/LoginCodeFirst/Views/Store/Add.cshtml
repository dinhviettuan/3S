
@using LoginCodeFirst.Resources
@model LoginCodeFirst.ViewModels.Store.IndexViewModel
@inject ResourcesServices Localizer
@{ 
    ViewBag.Title = "Add Store";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="block-header">
        <h2>
            @ViewBag.Title  
        </h2>
    </div>
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title"></h2>
                    @if(ViewBag.Err != null)
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Err</strong>
                        </div>
                    }
                    
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <form asp-controller="Store" asp-action="Add" method="post">
                                <div class="form-group">
                                    <label class="form-label" asp-for="StoreName">@Localizer.GetLocalizedHtmlString("lb_StoreName")</label>
                                    <input asp-for="StoreName" type="text" placeholder="StoreName"  class="form-control">
                                    <span class="text-danger" asp-validation-for="StoreName"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="Phone">@Localizer.GetLocalizedHtmlString("lb_Phone")</label>
                                    <input type="text" asp-for="Phone" placeholder="Phone" class="form-control">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="Email">@Localizer.GetLocalizedHtmlString("lb_Email")</label>
                                    <input asp-for="Email" type="text" placeholder="Email"  class="form-control">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="Street">@Localizer.GetLocalizedHtmlString("lb_Street")</label>
                                    <input asp-for="Street" type="text" placeholder="Street"  class="form-control">
                                    <span class="text-danger" asp-validation-for="Street"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="City">@Localizer.GetLocalizedHtmlString("lb_City")</label>
                                    <input asp-for="City" type="text" placeholder="City"  class="form-control">
                                    <span class="text-danger" asp-validation-for="City"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="State">@Localizer.GetLocalizedHtmlString("lb_State")</label>
                                    <input asp-for="State" type="text" placeholder="State"  class="form-control">
                                    <span class="text-danger" asp-validation-for="State"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ZipCode">@Localizer.GetLocalizedHtmlString("lb_ZipCode")</label>
                                    <input asp-for="ZipCode" type="text" placeholder="ZipCode"  class="form-control">
                                    <span class="text-danger" asp-validation-for="ZipCode"></span>
                                </div>
                                <button class="btn btn-primary waves-effect" type="submit">@Localizer.GetLocalizedHtmlString("bt_SUBMIT")</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
</div>