@using Microsoft.AspNetCore.Mvc.Localization
@model LoginCodeFirst.ViewModels.User.EditViewModel
@inject IViewLocalizer Localizer
@{ 
    ViewBag.Title = "Edit User";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="block-header">
        <h2>
            @ViewBag.Title  
        </h2>
    </div>
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">Edit User</h2>
                    @if(ViewBag.Err != null)
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Err</strong>
                        </div>
                    }
                    
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <form asp-controller="User" asp-action="Edit" method="post">
                                <input asp-for="UserId" type="hidden">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Email"></label>
                                    <input asp-for="Email" type="text" placeholder="Email" class="form-control">
                                    <span class="alert-danger" asp-validation-for="Email"></span>
                                </div>
                                @* <div class="form-group"> *@
                                @*     <label class="form-label" asp-for="Password"></label> *@
                                @*     <input type="password" asp-for="Password" placeholder="Password" class="form-control"> *@
                                @*     <span class="alert-danger" asp-validation-for="Password"></span> *@
                                @* </div> *@
                                <div class="form-group">
                                    <label class="form-label" asp-for="FullName"></label>
                                    <input asp-for="FullName" type="text" placeholder="FullName"  class="form-control">
                                    <span class="alert-danger" asp-validation-for="FullName"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="Phone"></label>
                                    <input asp-for="Phone" type="text" placeholder="Phone"  class="form-control">
                                    <span class="alert-danger" asp-validation-for="Phone"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label" asp-for="StoreId"></label>
                                    <select asp-for="StoreId" class="form-control" asp-items="@ViewBag.StoreId"></select>
                                </div>
                                <div>
                                    <input asp-for="IsActive" type="checkbox"/>
                                    <label asp-for="IsActive"></label>
                                </div>
                                <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
</div>