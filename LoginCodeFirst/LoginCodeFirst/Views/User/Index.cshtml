@using LoginCodeFirst.Resources
@model List<LoginCodeFirst.ViewModels.User.IndexViewModel>
@inject ResourcesServices Localizer
@{
    ViewBag.Title = Localizer.GetLocalizedHtmlString("usr_lbl_User");
}


<div class="container-fluid">
    <div class="block-header">
        <h2>
            @ViewBag.Title  
        </h2>
    </div>
    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">                   
                    <h2> 
                        <a type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-contact" 
                           asp-controller="User" asp-action="Add")>@Localizer.GetLocalizedHtmlString("add_a_Add")</a>
                    </h2>                    
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable">
                            <thead>
                            @if (TempData["User"] != null)
                            {
                                <div class="alert alert-success alert-dismissible">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    <strong>@TempData["User"]</strong>
                                </div>
                            }
                            <tr>
                                <th>
                                    @Localizer.GetLocalizedHtmlString("lbl_NumbericOrder")
                                </th>
                                <th>
                                    @Localizer.GetLocalizedHtmlString("th_StoreId")
                                </th>
                                <th>
                                    @Localizer.GetLocalizedHtmlString("th_Email")
                                </th>
                                <th>
                                    @Localizer.GetLocalizedHtmlString("th_FullName")
                                </th>
                                <th>
                                    @Localizer.GetLocalizedHtmlString("th_Phone")
                                </th>
                                <th>
                                    @Localizer.GetLocalizedHtmlString("th_IsActive")
                                </th>
                                <th>
                                    @Localizer.GetLocalizedHtmlString("th_Actions")
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @{ var stt = 0;}
                            @foreach (var item in Model)
                            {
                                stt += 1;
                                <tr>
                                    <td>@stt</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Store.StoreName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                    <td>

                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-url="@Url.Action("EditPassword", new {id = item.UserId})">
                                            Change Password
                                        </button>

                                        <!-- Modal -->
                                        ||
                                        <a asp-controller="User" asp-action="Edit" asp-route-id="@item.UserId">@Localizer.GetLocalizedHtmlString("a_Edit")</a> ||
                                        <a asp-controller="User" asp-action="Delete" onclick=" return confirm('You really want to delete?')" asp-route-id="@item.UserId">@Localizer.GetLocalizedHtmlString("a_Delete")</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-placeholder"></div>
