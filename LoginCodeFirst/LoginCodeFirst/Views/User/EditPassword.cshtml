@using LoginCodeFirst.Resources
@model LoginCodeFirst.ViewModels.User.PasswordViewModel
@inject ResourcesServices Localizer
@{
    ViewBag.Title = "Edit Password";
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="block-header">
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">@Localizer.GetLocalizedHtmlString("Edit User")</h2>
                    @if (ViewBag.Err != null)
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Err</strong>
                        </div>
                    }
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <form asp-controller="User" asp-action="EditPassword" method="post">
                                <input asp-for="UserId" type="hidden">
                                <div class="form-group">
                                    <label class="form-label" asp-for="NewPassword"></label>
                                    <input asp-for="NewPassword" type="password" placeholder="Enter your new password" class="form-control">
                                    <span class="alert-danger" asp-validation-for="NewPassword"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" type="password" placeholder="Enter your ConfirmPassword" class="form-control">
                                    <span class="alert-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
</div>

