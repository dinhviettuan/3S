@model LoginCodeFirst.ViewModels.User.PasswordViewModel
@{
    ViewBag.Title = "Edit Password";
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="block-header">
     </div>
     <!-- Basic Validation -->
     <div class="row clearfix">
         <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
             <div class="card">
                 <div class="body">
                     <h2 class="card-inside-title">@UserLocalizer.GetLocalizedHtmlString("lbl_EditPassword")</h2>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <form asp-controller="User" asp-action="EditPassword" method="post">
                                <input asp-for="UserId" type="hidden">
                                <div class="form-group">
                                    <label class="form-label" asp-for="NewPassword">@UserLocalizer.GetLocalizedHtmlString("lbl_NewPassword")</label>
                                    <input asp-for="NewPassword" type="password" placeholder="Enter your new password" class="form-control">
                                    <span class="alert-danger" asp-validation-for="NewPassword"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ConfirmPassword">@UserLocalizer.GetLocalizedHtmlString("lbl_ConfirmPassword")</label>
                                    <input asp-for="ConfirmPassword" type="password" placeholder="Enter your ConfirmPassword" class="form-control">
                                    <span class="alert-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <button class="btn btn-primary waves-effect" type="submit">@CommonLocalizer.GetLocalizedHtmlString("btn_Submit")</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
</div>


