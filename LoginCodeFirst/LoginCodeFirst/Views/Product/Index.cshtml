@using LoginCodeFirst.ViewModels
@model List<LoginCodeFirst.ViewModels.ProductViewModel>
@{
    ViewBag.Title = ProductLocalizer.GetLocalizedHtmlString("lbl_ListProduct");
}


<div class="container-fluid">
    <div class="block-header">
    </div>
    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2> 
                        <a type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-contact" 

                           asp-controller="Product" asp-action="Add")>@CommonLocalizer.GetLocalizedHtmlString("btn_Add")</a>

                    </h2>  
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                            <tr>
                                <th>
                                    @CommonLocalizer.GetLocalizedHtmlString("lbl_NumbericalOrder")
                                </th>
                                <th>
                                    @ProductLocalizer.GetLocalizedHtmlString("lbl_ProductName")
                                </th>
                                <th>
                                    @ProductLocalizer.GetLocalizedHtmlString("lbl_BrandId")
                                </th>
                                <th>
                                    @ProductLocalizer.GetLocalizedHtmlString("lbl_CategoryId")
                                </th>
                                <th>
                                    @ProductLocalizer.GetLocalizedHtmlString("lbl_ModelYear")
                                </th>
                                <th>
                                    @ProductLocalizer.GetLocalizedHtmlString("lbl_ListPrice")
                                </th>
                                <th>
                                    @ProductLocalizer.GetLocalizedHtmlString("lbl_Image")
                                </th>
                                <th>
                                    @CommonLocalizer.GetLocalizedHtmlString("lbl_Actions")
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @{ var stt = 0;}
                            @foreach (var item in Model)
                            {
                                stt += 1;
                                <tr>
                                <td>@stt</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BrandId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModelYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ListPrice)
                                    </td>
                                    <td>
                                        <img src="~/images/@Html.DisplayFor(modelItem => item.Image)" width="100px"/>
                                    </td>
                                    <td>
                                        <a asp-controller="Product" asp-action="Edit" 
                                           asp-route-id="@item.Id">@CommonLocalizer.GetLocalizedHtmlString("btn_Edit")</a>
                                        <a asp-controller="Product" asp-action="Delete" onclick=" return confirm('@CommonLocalizer.GetLocalizedHtmlString("btn_YouDelete")')"
                                           asp-route-id="@item.Id">@CommonLocalizer.GetLocalizedHtmlString("btn_Delete")</a>

                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>