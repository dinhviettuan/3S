
@using LoginCodeFirst.Resources
@model LoginCodeFirst.ViewModels.Product.ProductViewModel
@inject ResourcesServices Localizer
@{
    ViewBag.Title = Localizer.GetLocalizedHtmlString("msg_AddProduct");
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="block-header">
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title"></h2>
                    @if (ViewBag.Err != null)
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Err</strong>
                        </div>
                    }

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class="form-label" asp-for="ProductName">@Localizer.GetLocalizedHtmlString("lbl_ProductName")</label>
                                    <input type="text" asp-for="ProductName" placeholder="ProductName" class="form-control">
                                    <span class="text-danger" asp-validation-for="ProductName"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ModelYear">@Localizer.GetLocalizedHtmlString("lbl_ModelYear")</label>
                                    <input type="text" asp-for="ModelYear" placeholder="ModelYear" class="form-control">
                                    <span class="text-danger" asp-validation-for="ModelYear"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ListPrice">@Localizer.GetLocalizedHtmlString("lbl_ListPrice")</label>
                                    <input type="text" asp-for="ListPrice" placeholder="ListPrice" class="form-control">
                                    <span class="text-danger" asp-validation-for="ListPrice"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ImageFile">@Localizer.GetLocalizedHtmlString("lbl_ImageFile")</label>
                                    <input type="file" asp-for="ImageFile" class="form-control">
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="BrandId">@Localizer.GetLocalizedHtmlString("lbl_BrandId")</label>
                                    <select asp-for="BrandId" class="form-control" asp-items="@ViewBag.BrandId"></select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="CategoryId">@Localizer.GetLocalizedHtmlString("lbl_CategoryId")</label>
                                    <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryId"></select>
                                </div>
          

                                <button class="btn btn-primary waves-effect" type="submit">@Localizer.GetLocalizedHtmlString("btn_SUBMIT")</button>
                            </form>
                        </div>
                        <a asp-area="" asp-controller="Product" asp-action="Index">
                            <i class="material-icons">reply</i>@Localizer.GetLocalizedHtmlString("cb_a_ComBack")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
</div>