@using LoginCodeFirst.ViewModels
@model LoginCodeFirst.ViewModels.ProductViewModel
@{
    ViewBag.Title = ProductLocalizer.GetLocalizedHtmlString("lbl_EditProduct");
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="block-header">
    </div>
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title"></h2>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
                                <input asp-for="ProductId" type="hidden">
                                <div class="form-group">
                                    <label class="form-label" asp-for="ProductName">@ProductLocalizer.GetLocalizedHtmlString("lbl_ProductName")</label>
                                    <input type="text" asp-for="ProductName" placeholder="ProductName" class="form-control">
                                    <span class="text-danger" asp-validation-for="ProductName"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ListPrice">@ProductLocalizer.GetLocalizedHtmlString("lbl_ListPrice")</label>
                                    <input type="text" asp-for="ListPrice" placeholder="ListPrice" class="form-control">
                                    <span class="text-danger" asp-validation-for="ListPrice"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ModelYear">@ProductLocalizer.GetLocalizedHtmlString("lbl_ModelYear")</label>
                                    <input type="text" asp-for="ModelYear" placeholder="ModelYear" class="form-control">
                                    <span class="text-danger" asp-validation-for="ModelYear"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ImageFile">@ProductLocalizer.GetLocalizedHtmlString("lbl_ImageFile")</label>
                                    <input type="file" asp-for="ImageFile" class="form-control">
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="BrandId">@ProductLocalizer.GetLocalizedHtmlString("lbl_BrandId")</label>
                                    <select asp-for="BrandId" class="form-control" asp-items="@ViewBag.BrandId"></select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="CategoryId">@ProductLocalizer.GetLocalizedHtmlString("lbl_CategoryId")</label>
                                    <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryId"></select>
                                </div>


                                <button class="btn btn-primary waves-effect" type="submit">@CommonLocalizer.GetLocalizedHtmlString("btn_Submit")</button>
                            </form>
                        </div>
                        <a asp-area="" asp-controller="Product" asp-action="Index">
                            <i class="material-icons">reply</i>@CommonLocalizer.GetLocalizedHtmlString("btn_ComBack")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
</div>