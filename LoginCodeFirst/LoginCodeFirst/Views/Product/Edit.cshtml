@using Microsoft.AspNetCore.Mvc.Localization
@model LoginCodeFirst.ViewModels.Product.IndexViewModel
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "Edit Product";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="block-header">
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">Edit Product</h2>
                    @if (ViewBag.Err != null)
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Err</strong>
                        </div>
                    }

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
                                <input asp-for="ProductId" type="hidden">
                                <div class="form-group">
                                    <label class="form-label" asp-for="ProductName"></label>
                                    <input type="text" asp-for="ProductName" placeholder="ProductName" class="form-control">
                                    <span class="alert-danger" asp-validation-for="ProductName"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ModelYear"></label>
                                    <input type="text" asp-for="ModelYear" placeholder="ModelYear" class="form-control">
                                    <span class="alert-danger" asp-validation-for="ModelYear"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="ListPrice"></label>
                                    <input type="text" asp-for="ListPrice" placeholder="ListPrice" class="form-control">
                                    <span class="alert-danger" asp-validation-for="ListPrice"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="BrandId"></label>
                                    <select asp-for="BrandId" class="form-control" asp-items="@ViewBag.BrandId"></select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="CategoryId"></label>
                                    <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryId"></select>
                                </div>


                                <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
</div>