@using LoginCodeFirst.Resources
@model List<LoginCodeFirst.ViewModels.Brand.IndexViewModel>
@inject ResourcesServices Localizer
@{
    ViewBag.Title = "Index Brand";
}


<div class="container-fluid">
    <div class="block-header">
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        <a class="btn btn-success" asp-controller="Brand" asp-action="Add">@Localizer.GetLocalizedHtmlString("ADD")</a>
                    </h2>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>

                                    <th>
                                        @Localizer.GetLocalizedHtmlString("BrandId")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("BrandName")
                                    </th>
                                    <th>
                                        @Localizer.GetLocalizedHtmlString("Actions")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BrandId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BrandName)
                                        </td>
                                        <td>
                                            <a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.BrandId">@Localizer.GetLocalizedHtmlString("Edit")</a>
                                            <a asp-controller="Brand" asp-action="Delete" onclick=" return confirm('You really want to delete?')" asp-route-id="@item.BrandId">@Localizer.GetLocalizedHtmlString("Delete")</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>